@model MainSideBarViewModel

<div class="sidebar notactive" id="sidebar">
    <nav class="nav">
        <ul class="list">
            <li class="wrap-logo">
                <img class="logo" src="~/img/png/logo.png" onclick=" window.location.href='/Home/';">
                <form asp-controller="Account"
                      asp-action="Logout"
                      style="width: 25px; height: 25px; display: flex; justify-content: center; align-items: center">
                    <button style="width: 25px; height: 25px; display: flex; justify-content: center; align-items: center"
                            class="button transparent" type="submit">
                        <img class="icon" src="~/img/svg/exit.svg">
                    </button>
                </form>
            </li>
        </ul>
        <ul class="list">
            <li class="personal">
                <img class="logo" src="~/img/svg/personal.svg">
                <p class="name">@Model.FirstName&nbsp;@Model.LastName</p>
            </li>
        </ul>
        <ul class="list">
            <li class="item">Каталог</li>
            <li class="item">Акції</li>
            <li class="item">Оплата</li>
            <li class="item">Гарантії</li>
            <li class="item">Контакти</li>
            <li class="item">Доставка</li>
            <li class="item">Інформація</li>
        </ul>
    </nav>
</div>