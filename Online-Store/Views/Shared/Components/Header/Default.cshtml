@model HeaderViewModel

<header>
    <div class="overlay" id="overlay"></div>
    <div class="up">
        <nav class="nav">
            <ul class="menu">
                <img class="icon" src="~/img/svg/burgerbtn.svg" onclick="toggleSideBar()">
            </ul>
            <ul class="wrap-logo" onclick="window.location.href='/Home/';">
                <img class="logo" src="~/img/png/logo.png">
            </ul>
            <ul class="wrap-search">
                <img class="input-img" src="~/img/svg/search.svg">
                <input class="input search" placeholder="Знайти щось">
                <button class="button gray">Знайти</button>
            </ul>
            <ul class="language">
                <li class="item">EN</li>
                <li class="item">|</li>
                <li class="item">UA</li>
            </ul>
            <ul class="personal-icons">
                <li class="item">
                    <img class="icon" onclick="window.location.href='/Account/Cabinet';" src="~/img/svg/personal.svg">
                </li>
                <li class="item">
                    <img class="icon" onclick="window.location.href='/Account/Cabinet';" src="~/img/svg/basket.svg">
                </li>
                @if (Model.Role.Priority < 3)
                {
                    <li class="item" id="settings">
                        <img class="icon" onclick="window.location.href='/Settings/AddProduct';" src="~/img/svg/admin.svg">
                    </li>
                }
                

                <li class="item">
                    <form asp-controller="Account"
                                      asp-action="Logout"
                                      style="width: 25px; height: 25px; display: flex; justify-content: center; align-items: center">
                        <button style="width: 25px; height: 25px; display: flex; justify-content: center; align-items: center"
                            class="button transparent" type="submit"><img class="icon" src="~/img/svg/exit.svg"></button>
                    </form>
                </li>
            </ul>
        </nav>
    </div>
    <div class="down">
        <nav class="nav">
            <ul class="list">
                <li class="item">
                    <span class="button gray">Каталог</span>
                    <ul class="drop-list">
                        <li class="drop-item">
                            1
                        </li>
                        <li class="drop-item">
                            2
                        </li>
                    </ul>
                </li>
                <li class="item">
                    <span class="button white">Акції</span>
                    <ul class="drop-list">
                        <li class="drop-item">
                            1
                        </li>
                        <li class="drop-item">
                            2
                        </li>
                    </ul>
                </li>
                <li class="item">
                    <span class="button white">Оплата</span>
                    <ul class="drop-list">
                        <li class="drop-item">
                            1
                        </li>
                        <li class="drop-item">
                            2
                        </li>
                    </ul>
                </li>
                <li class="item">
                    <span class="button white">Гарантії</span>
                    <ul class="drop-list">
                        <li class="drop-item">
                            1
                        </li>
                        <li class="drop-item">
                            2
                        </li>
                    </ul>
                </li>
                <li class="item">
                    <span class="button white">Контакти</span>
                    <ul class="drop-list">
                        <li class="drop-item">
                            1
                        </li>
                        <li class="drop-item">
                            2
                        </li>
                    </ul>
                </li>
                <li class="item">
                    <span class="button white">Доставка</span>
                    <ul class="drop-list">
                        <li class="drop-item">
                            1
                        </li>
                        <li class="drop-item">
                            2
                        </li>
                    </ul>
                </li>
                <li class="item">
                    <span class="button white">Інформація</span>
                    <ul class="drop-list">
                        <li class="drop-item">
                            1
                        </li>
                        <li class="drop-item">
                            2
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
</header>