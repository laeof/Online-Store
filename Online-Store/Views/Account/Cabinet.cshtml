@model CabinetViewModel

<div class="cabinet">
	<nav class="cabinet-sidebar">
		<ul class="cabinet-list">
			<li class="cabinet-item-picture">
				
			</li>
			<li class="cabinet-item">
				<div>
					<p class="cabinet-item-name">@Model.FirstName &#x20; @Model.LastName</p>
					<p class="cabinet-item-subname">@Model.Email</p>
				</div>
			</li>
		</ul>
	</nav>
	<div class="cabinet-info">
		<nav class="cabinet-info-nav">
			<ul class="cabinet-info-list">
				<li class="cabinet-info-item">
					<div class="cabinet-info-title">
						<img />
						<p class="">Особисті дані</p>
					</div>
					<ul class="cabinet-info-item-list">
						<li class="cabinet-info-item-list-item">
							<label for="">Ім'я</label>
							<input asp-for="FirstName"/>
						</li>
						<li class="cabinet-info-item-list-item">
							<label for="">Прізвище</label>
							<input asp-for="LastName" />
						</li>

						<li class="cabinet-info-item-list-item">
							<label for="">Стать</label>
							<input asp-for="Gender" />
						</li>
					</ul>
				</li>
				<li class="cabinet-info-item">
					<div class="cabinet-info-title">
						<img />
						<p class="">Контакти</p>
					</div>
					<ul class="cabinet-info-item-list">
						<li class="cabinet-info-item-list-item">
							<label for="">Телефон</label>
							<input asp-for="PhoneNumber" />
						</li>
						<li class="cabinet-info-item-list-item">
							<label for="">Електронна пошта</label>
							<input asp-for="Email" />
						</li>
					</ul>
				</li>7 
				<li class="cabinet-info-item">
					<div class="cabinet-info-title">
						<img />
						<p class="">Акаунт</p>
					</div>
					<ul class="cabinet-info-item-list">
						<li class="cabinet-info-item-list-item">
							<label for="">Електронна пошта</label>
							<input asp-for="Email" />
						</li>
						<li class="cabinet-info-item-list-item">
							<label for="">Пароль</label>
							<input asp-for="Password" />
						</li>
					</ul>
				</li>
			</ul>
		</nav>
	</div>
</div>