@model RegisterViewModel
<div id="myModal" class="loginreg" style="visibility: visible">
    <div class="loginreg-content" id="modal-content" style="transform: translateY(0%)">
        <form id="registerForm"
              class="login"
              asp-controller="Account"
              asp-action="Register">
            <h2 class="title">Реєстрація</h2>
            <div class="alternate">
                <button class="button white"><img class="icon" src="~/img/png/google.png">Google</button>
                <button class="button white"><img class="icon" src="~/img/png/google.png">Google</button>
            </div>

            <label for="Name">Ім'я</label>
            <span asp-validation-for="Name" class="validation"></span>
            <input type="text" name="Name" asp-for="Name">

            <label for="Lastname">Прізвище</label>
            <span asp-validation-for="Lastname" class="validation"></span>
            <input type="text" name="Lastname" asp-for="Lastname">

            <label for="PhoneNumber">Номер телефону</label>
            <span asp-validation-for="PhoneNumber" class="validation"></span>
            <input type="text" name="PhoneNumber" id="PhoneNumber" placeholder="+38 (999)-999-99-99">


            <label for="Email">Електронна пошта</label>
            <span asp-validation-for="Email" class="validation"></span>
            <input type="text" name="Email" asp-for="Email">

            <label for="password">Пароль</label>
            <span asp-validation-for="Password" class="validation"></span>
            <input type="Password" name="Password" asp-for="Password">

            <span class="validation">@Model.ErrorMessage</span>

            <button class="button grayblack" type="submit">Зареєструватися</button>
            <p>Вже є акаунт? <a href="#" onclick="window.location.href='/Account/Login';">Увійти</a></p>
        </form>
    </div>
</div>
